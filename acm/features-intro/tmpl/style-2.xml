<?xml version="1.0" encoding="utf-8"?>
<form>
	<title>Features Intro Style 4</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="bg-content" type="list" default="secondary" label="FEATURES_BACKGROUND_COLOR_LABEL" description="FEATURES_BACKGROUND_COLOR_DESC" >
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="info">Info</option>
				<option value="danger">Danger</option>
			</field>

			<field name="img-features" type="media" default="" label="FEATURES_IMAGE_LABEL" description="FEATURES_IMAGE_DESC" required="1"></field>

			<field name="sub-title" type="text" default="" label="FEATURES_SUBTITLE_LABEL" description="FEATURES_SUBTITLE_DESC"/>
			<field name="title" type="text" default="" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC"/>
			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC" rows="5" cols="40" />
		</fieldset>

		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC" >
			<field name="section-features" type="jalist" label="" description="">
				<item name="ls-title" type="text" default="" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1"/>
				<item name="ls-desc" type="textarea" default="" label="FEATURES_DESCRIPTION_LABEL" description="FEATURES_DESCRIPTION_DESC"/>
			</field>
		</fieldset>
	</fields>
</form>